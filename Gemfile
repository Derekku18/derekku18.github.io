source "https://rubygems.org"

gem "jekyll", "~> 4.3"

# Minimal Mistakes theme
gem "minimal-mistakes-jekyll", "~> 4.26"

# Required plugins
gem "jekyll-seo-tag"
gem "jekyll-sitemap"
gem "jekyll-feed"
gem "jekyll-paginate"

# Faraday fix for GitHub Pages builds (required for Jekyll + plugins)
gem "faraday-retry"

# GitHub Actions performance improvement
gem "webrick" # required for local serve in Ruby >= 3.0
